<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_username_desc1_summary_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="도전 성공률이 높은"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nanumsquare_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_username_summary_mypage"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_type_img_summary_mypage" />

        <TextView
            android:id="@+id/tv_username_summary_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_extrabold"
            android:text="UserName"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_username_desc1_summary_mypage"
            app:layout_constraintEnd_toStartOf="@id/tv_username_desc2_summary_mypage"
            app:layout_constraintStart_toEndOf="@+id/tv_username_desc1_summary_mypage"
            app:layout_constraintTop_toTopOf="@+id/tv_username_desc1_summary_mypage" />



        <TextView
            android:id="@+id/tv_username_desc2_summary_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님은"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:fontFamily="@font/nanumsquare_regular"
            app:layout_constraintBottom_toBottomOf="@+id/tv_username_summary_mypage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_username_summary_mypage"
            app:layout_constraintTop_toTopOf="@+id/tv_username_summary_mypage" />

        <TextView
            android:id="@+id/tv_type_summary_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="작심삼일이 뭐죠? 완벽형"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nanumsquare_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_username_desc1_summary_mypage" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:id="@+id/tl_summary_mypage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_type_summary_mypage">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_best"
                    />

                <TextView
                    android:id="@+id/tv_type_desc1_summary_mypage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:text="성공률이 전체 10% 그룹에 속해 있습니다"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_run_shoes" />

                <TextView
                    android:id="@+id/tv_type_desc2_summary_mypage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:text="지금까지 도전별 평균 거리는 4km 입니다."
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_speed" />

                <TextView
                    android:id="@+id/tv_type_desc3_summary_mypage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nanumsquare_regular"
                    android:text="지금까지 도전별 평균 속도는 10.2km/h 입니다."
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </TableRow>
        </TableLayout>


        <View
            android:id="@+id/v_separator1_summary_mypage"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="32sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="#AAAAAA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_summary_mypage" />




        <ImageView
            android:id="@+id/iv_type_img_summary_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kakao_default_profile_image" />

        <TextView
            android:id="@+id/tv_badges_summary_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_bold"
            android:text="획득한 배지"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_separator1_summary_mypage" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_badges_summary_mypage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:layout_marginBottom="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_badges_summary_mypage"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:spanCount="4"
            tools:itemCount="7"
            tools:listitem="@layout/item_badge_mypage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#AAAAAA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/rv_badges_summary_mypage"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

