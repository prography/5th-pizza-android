<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_rank_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="num"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fontFamily="@font/nanumsquare_extrabold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_profile_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/iv_profile_detail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/kakao_default_profile_image"
        app:layout_constraintStart_toEndOf="@id/tv_rank_detail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_username_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fontFamily="@font/nanumsquare_bold"
        app:layout_constraintStart_toEndOf="@id/iv_profile_detail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_percent_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70%"
        android:fontFamily="@font/nanumsquare_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progressBar_detail"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <ProgressBar
        android:id="@+id/progressBar_detail"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="70"
        android:progressTint="#FFA047"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_profile_detail"
        app:layout_constraintTop_toBottomOf="@id/tv_username_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>