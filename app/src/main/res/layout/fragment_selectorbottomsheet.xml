<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fontFamily="@font/nanumsquare_bold"
        android:text="선택"
        android:id="@+id/tv_header_selector_bottomsheet"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:background="@android:color/white"
        android:elevation="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_selector_bottomsheet">

        <ListView
            android:id="@+id/lv_selector1_bottomsheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:entries="@array/array_rountineType"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/lv_selector2_bottomsheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/array_objectUnit"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/lv_selector3_bottomsheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/array_exerciseType"
            android:scrollbars="none" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>