<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.record.RecordActivity">

    <net.daum.mf.map.api.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        tools:background=""
        android:id="@+id/frame_mapview_record"
        android:foreground="@drawable/foreground_gradient_white_center"
        app:layout_constraintBottom_toTopOf="@+id/tv_cur_progress_map_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="false"
        tools:visibility="gone"
        android:src="@drawable/background_gradient_orange"
        android:id="@+id/iv_foreground_record" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquare_bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_record"
        android:id="@+id/tv_main_desc_record"
        android:layout_marginTop="48dp"
        android:text="목표" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquare_extrabold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_desc_record"
        android:text="1km 달리기" />


    <TextView
        android:id="@+id/tv_cur_progress_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="0.0"
        android:textColor="@android:color/black"
        android:fontFamily="@font/cookierun_black"
        android:textSize="64sp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cur_progress_unit_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="m"
        android:textColor="@android:color/black"
        android:fontFamily="@font/cookierun_black"
        android:textSize="24sp"
        android:visibility="invisible"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@id/tv_cur_progress_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cur_progress_map_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="0.0"
        android:fontFamily="@font/cookierun_bold"
        android:textColor="@android:color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cur_progress_unit_map_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cur_progress_unit_map_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cookierun_bold"
        android:text="m"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_start_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_submit_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stop"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/iv_start_record"
        app:layout_constraintBottom_toBottomOf="@+id/iv_start_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_start_record" />

    <ImageView
        android:id="@+id/iv_change_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_run"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/iv_location_record"
        app:layout_constraintEnd_toEndOf="@id/iv_location_record"
        app:layout_constraintBottom_toTopOf="@id/iv_location_record"
        android:layout_marginBottom="16dp"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        android:id="@+id/iv_location_record"
        app:layout_constraintTop_toTopOf="@+id/iv_start_record"
        app:layout_constraintBottom_toBottomOf="@+id/iv_start_record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_start_record"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pc_record"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_start_record"
        app:layout_constraintEnd_toEndOf="@+id/iv_start_record"
        app:layout_constraintStart_toStartOf="@+id/iv_start_record"
        app:layout_constraintTop_toTopOf="@+id/iv_start_record" />

    <ImageView
        android:id="@+id/iv_start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>