<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4">

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@drawable/ic_remove_circle"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/list_routineType"
        android:text="RoutineType"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/list_time"
        android:text="time"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/list_objectUnit"
        android:text="objectUnit"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/list_exerciseType"
        android:text="exerciseType"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"/>

</LinearLayout>