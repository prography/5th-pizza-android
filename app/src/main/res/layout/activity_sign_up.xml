<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp"
    tools:context=".src.signup.SignUpActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_signup"
        app:title="프로필 입력"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:background="@drawable/form_edittext"
        android:id="@+id/tv_email_signup"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:background="@drawable/form_edittext"
        android:id="@+id/tv_password_signup"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름"
        android:background="@drawable/form_edittext"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/tv_name_signup"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="나이"
        android:background="@drawable/form_edittext"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/tv_age_signup"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="지역"
        android:background="@drawable/form_edittext"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/tv_location_signup"
        android:layout_marginBottom="32dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가입완료"
        android:gravity="center"
        android:background="@drawable/form_edittext"
        android:id="@+id/btn_signup_signup"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>