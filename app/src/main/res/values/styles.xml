<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#ea7a58</item>
        <item name="android:itemTextAppearance">@style/MenuText</item>
    </style>

    <!-- Base application theme.Black -->
    <style name="AppThemeSub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#ea7a58</item>
        <item name="android:itemTextAppearance">@style/MenuTextBlack</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:background">@drawable/splashscreen</item>
    </style>

    <!-- TabLayout Theme -->
    <style name="TabTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/nanumsquare_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Dialog Round Theme -->
    <style name="RoundDialogTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_round_shape_white</item>
    </style>

    <style name="MenuText">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/nanumsquare_bold</item>

    </style>

    <style name="MenuTextBlack">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/nanumsquare_regular</item>

    </style>

</resources>
